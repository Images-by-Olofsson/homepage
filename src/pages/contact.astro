---
// src/pages/contact.astro
import MainLayout from '../layouts/MainLayout.astro';
import WaveBackground from '../components/WaveBackground.astro';
---

<MainLayout title="Contact | Images by Olofsson">
  <div>
      <WaveBackground opacity="opacity-80" theme="purple" />
  </div>

  <div class="container mx-auto px-4 py-12 md:py-20 relative z-10">
  <div class="container mx-auto px-4 py-12 md:py-20">
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-20 max-w-6xl mx-auto items-start">
      
      <div class="space-y-8">
        <div>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">Get in touch</h1>
          <p class="text-gray-400 text-lg leading-relaxed">
            Do you have questions about any of my photos, collaborations, or just want to say hi? 
            Connect with me on social media or send me a direct email.
          </p>
        </div>

        <div>
          <h2 class="text-white font-semibold text-xl mb-4">You can also find me on...</h2>
          
          <div class="grid grid-cols-3 gap-4">
            
